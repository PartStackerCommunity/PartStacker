#include <winver.h>

VS_VERSION_INFO VERSIONINFO
FILEVERSION ${PSTACK_VERSION_MAJOR},${PSTACK_VERSION_MINOR},${PSTACK_VERSION_PATCH}
PRODUCTVERSION ${PSTACK_VERSION_MAJOR},${PSTACK_VERSION_MINOR},${PSTACK_VERSION_PATCH}
FILEFLAGSMASK 0x3fL
FILEFLAGS 0x0L
FILEOS 0x0L
FILETYPE VFT_APP
FILESUBTYPE 0x0L
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904b0"
        BEGIN
            VALUE "CompanyName", "PartStacker Community"
            VALUE "FileDescription", "PartStacker Community Edition ${PSTACK_OUTPUT_TYPE}"
            VALUE "FileVersion", "${PSTACK_VERSION_MAJOR}.${PSTACK_VERSION_MINOR}.${PSTACK_VERSION_PATCH}"
            VALUE "InternalName", "${PSTACK_OUTPUT_FILE_NAME}.exe"
            VALUE "LegalCopyright", "Copyright (c) 2025 Braden Ganetsky"
            VALUE "OriginalFilename", "${PSTACK_OUTPUT_FILE_NAME}.exe"
            VALUE "ProductName", "PartStacker Community Edition"
            VALUE "ProductVersion", "${PSTACK_VERSION_MAJOR}.${PSTACK_VERSION_MINOR}.${PSTACK_VERSION_PATCH}"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1200
    END
END
